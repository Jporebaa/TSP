<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tspsystem.controllers.ChatController">
    <left>
        <AnchorPane prefHeight="501.0" prefWidth="169.0" style="-fx-background-color: #263F73;">
            <Label layoutX="119.0" layoutY="468.0" textFill="#fcfafa" />
            <Line endX="119.33332824707031" endY="7.62939453125E-6" layoutX="100.0" layoutY="73.0" startX="-100.0" stroke="WHITE" />
            <Circle fill="#ffffff00" layoutX="99.0" layoutY="240.0" radius="100.0" stroke="#f5f5f5" strokeType="INSIDE" />
            <Label layoutX="68.0" layoutY="228.0" prefHeight="23.0" prefWidth="84.0" text="TSP SYSTEM" textFill="#fcfafa">
                <font>
                    <Font size="15.0" />
                </font>
            </Label>
            <Button fx:id="userNameButton" layoutX="-1.0" mnemonicParsing="false" prefHeight="73.0" prefWidth="221.0" style="-fx-background-color: #263F73;" text="Kuba" textFill="WHITE">
                <graphic>
                    <ImageView fitHeight="43.0" fitWidth="46.0">
                        <image><Image url="@../icon/avatar.png"/></image>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleLogoutButtonAction" layoutX="47.0" layoutY="453.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="126.0" style="-fx-background-color: #263F73;" text="Wyloguj się" textFill="WHITE" />
